@model ContatoModel

@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">

    <h3>Deseja realmente apagar o contato (@Model.Nome)?</h3>
</div>
<a class="btn btn-danger" role="button" asp-asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar</a>
<a class="btn btn-primary" role="button" asp-asp-controller="Contato" asp-action="Index">Cancelar</a>

